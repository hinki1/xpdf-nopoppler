SHELL = /bin/sh

prefix = @prefix@
srcdir = @srcdir@
VPATH = @srcdir@

GOOSRCDIR = $(srcdir)/../goo
GOOLIBDIR = ../goo
FOFISRCDIR = $(srcdir)/../fofi
FOFILIBDIR = ../fofi
SPLASHSRCDIR = $(srcdir)/../splash
SPLASHLIBDIR = ../splash

CXXFLAGS = @CXXFLAGS@ @DEFS@ -I.. -I$(srcdir)/.. -I$(GOOSRCDIR) -I$(FOFISRCDIR) -I$(SPLASHSRCDIR) -I$(srcdir) @freetype2_CFLAGS@ @Sgm_CFLAGS@ @Xm_CFLAGS@ @Xt_CFLAGS@ @Xp_CFLAGS@ @Xext_CFLAGS@ @Xpm_CFLAGS@ @libpng_CFLAGS@ @libpaper_CFLAGS@ @X_CFLAGS@ @EXTRA_CFLAGS@

LDFLAGS = @LDFLAGS@

LDFLAGS += -lpthread

FTLIBS = @freetype2_LIBS@ -lz

XLIBS = @Sgm_LIBS@ @Xm_LIBS@ @Xt_LIBS@ @Xp_LIBS@ @Xext_LIBS@ @Xpm_LIBS@ @X_PRE_LIBS@ @X_LIBS@ -lX11 @X_EXTRA_LIBS@

PNGLIBS = @libpng_LIBS@

SPLASHLIBS = -L$(SPLASHLIBDIR) -lsplash

OTHERLIBS = @LIBS@ @libpaper_LIBS@ @EXTRA_LIBS@ \
	-L$(FOFILIBDIR) -lfofi \
	-L$(GOOLIBDIR) -lGoo

CXX = @CXX@

LIBPREFIX = @LIBPREFIX@
EXE = @EXE@

#------------------------------------------------------------------------

.SUFFIXES: .cc

.cc.o:
	$(CXX) $(CXXFLAGS) -c $<

#------------------------------------------------------------------------

common-files := AcroForm Annot Array
common-files += BuiltinFont BuiltinFontTables
common-files += Catalog CharCodeToUnicode CMap
common-files += Decrypt Dict
common-files += Error
common-files += FontEncodingTables Form Function
common-files += Gfx GfxFont GfxState GlobalParams
common-files += JArithmeticDecoder JBIG2Stream JPXStream
common-files += Lexer Link
common-files += NameToCharCode
common-files += Object OptionalContent Outline OutputDev
common-files += Page Parser PDFDoc PDFDocEncoding PSTokenizer
common-files += SecurityHandler Stream
common-files += TextString
common-files += UnicodeMap
common-files += UTF8
common-files += XFAForm
common-files += XpdfPluginAPI XRef
common-files += Zoox

common-output-files := DisplayState SplashOutputDev
common-output-files += TileCache TileCompositor TileMap
common-ps-files := PreScanOutputDev PSOutputDev
common-unicode-files := TextOutputDev UnicodeTypeTable

cc-files := $(common-files)
cc-files += $(common-output-files)
cc-files += $(common-ps-files)
cc-files += $(common-unicode-files)
cc-files += CoreOutputDev
cc-files += HTMLGen
cc-files += ImageOutputDev
cc-files += PDFCore
cc-files += XPDFApp XPDFCore XPDFTree XPDFViewer
cc-files += pdftops pdftotext pdftohtml pdfinfo pdffonts pdfdetach
cc-files += pdftoppm pdftopng pdfimages
cc-files += xpdf

CXX_SRC := $(cc-files:%=$(srcdir)/%.cc)

#------------------------------------------------------------------------

all: xpdf$(EXE) pdftops$(EXE) pdftotext$(EXE) pdftohtml$(EXE) \
	pdfinfo$(EXE) pdffonts$(EXE) pdfdetach$(EXE) pdftoppm$(EXE) \
	pdftopng$(EXE) pdfimages$(EXE)

all-no-x: pdftops$(EXE) pdftotext$(EXE) pdftohtml$(EXE) pdfinfo$(EXE) \
	pdffonts$(EXE) pdfdetach$(EXE) pdfimages$(EXE)

#------------------------------------------------------------------------

xpdf-files := $(common-files)
xpdf-files += $(common-output-files)
xpdf-files += $(common-ps-files)
xpdf-files += $(common-unicode-files)
xpdf-files += CoreOutputDev
xpdf-files += PDFCore
xpdf-files += XPDFApp XPDFCore XPDFTree XPDFViewer
xpdf-files += xpdf

XPDF_OBJS := $(xpdf-files:%=%.o)

XPDF_LIBS = -L$(GOOLIBDIR) -lGoo $(SPLASHLIBS) $(FTLIBS) \
	$(XLIBS) $(OTHERLIBS) -lm

xpdf$(EXE): $(XPDF_OBJS) $(GOOLIBDIR)/$(LIBPREFIX)Goo.a
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o xpdf$(EXE) $(XPDF_OBJS) $(XPDF_LIBS)

#------------------------------------------------------------------------

pdftops-files := $(common-files)
pdftops-files += $(common-output-files)
pdftops-files += $(common-ps-files)
pdftops-files += pdftops

PDFTOPS_OBJS = $(pdftops-files:%=%.o)

PDFTOPS_LIBS = -L$(GOOLIBDIR) -lGoo $(SPLASHLIBS) $(FTLIBS) \
	$(OTHERLIBS) -lm

pdftops$(EXE): $(PDFTOPS_OBJS) $(GOOLIBDIR)/$(LIBPREFIX)Goo.a
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o pdftops$(EXE) $(PDFTOPS_OBJS) \
		$(PDFTOPS_LIBS)

#------------------------------------------------------------------------

pdftotext-files := $(common-files)
pdftotext-files += $(common-unicode-files)
pdftotext-files += pdftotext

PDFTOTEXT_OBJS := $(pdftotext-files:%=%.o)

PDFTOTEXT_LIBS = -L$(GOOLIBDIR) -lGoo $(OTHERLIBS) -lm

pdftotext$(EXE): $(PDFTOTEXT_OBJS) $(GOOLIBDIR)/$(LIBPREFIX)Goo.a
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o pdftotext$(EXE) $(PDFTOTEXT_OBJS) \
		$(PDFTOTEXT_LIBS)

#------------------------------------------------------------------------
pdftohtml-files := $(common-files)
pdftohtml-files += $(common-output-files)
pdftohtml-files += $(common-unicode-files)
pdftohtml-files += HTMLGen
pdftohtml-files += pdftohtml

PDFTOHTML_OBJS := $(pdftohtml-files:%=%.o)

PDFTOHTML_LIBS = -L$(GOOLIBDIR) -lGoo $(SPLASHLIBS) $(FTLIBS) \
	$(OTHERLIBS) $(PNGLIBS) -lm

pdftohtml$(EXE): $(PDFTOHTML_OBJS) $(GOOLIBDIR)/$(LIBPREFIX)Goo.a
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o pdftohtml$(EXE) $(PDFTOHTML_OBJS) \
		$(PDFTOHTML_LIBS)

#------------------------------------------------------------------------
pdfinfo-files := $(common-files)
pdfinfo-files += pdfinfo

PDFINFO_OBJS := $(pdfinfo-files:%=%.o)

PDFINFO_LIBS = -L$(GOOLIBDIR) -lGoo $(OTHERLIBS) -lm

pdfinfo$(EXE): $(PDFINFO_OBJS) $(GOOLIBDIR)/$(LIBPREFIX)Goo.a
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o pdfinfo$(EXE) $(PDFINFO_OBJS) \
		$(PDFINFO_LIBS)

#------------------------------------------------------------------------
pdffonts-files := $(common-files)
pdffonts-files += pdffonts

PDFFONTS_OBJS := $(pdffonts-files:%=%.o)

PDFFONTS_LIBS = -L$(GOOLIBDIR) -lGoo $(OTHERLIBS) -lm

pdffonts$(EXE): $(PDFFONTS_OBJS) $(GOOLIBDIR)/$(LIBPREFIX)Goo.a
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o pdffonts$(EXE) $(PDFFONTS_OBJS) \
		$(PDFFONTS_LIBS)

#------------------------------------------------------------------------
pdfdetach-files := $(common-files)
pdfdetach-files += pdfdetach

PDFDETACH_OBJS := $(pdfdetach-files:%=%.o)

PDFDETACH_LIBS = -L$(GOOLIBDIR) -lGoo $(OTHERLIBS) -lm

pdfdetach$(EXE): $(PDFDETACH_OBJS) $(GOOLIBDIR)/$(LIBPREFIX)Goo.a
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o pdfdetach$(EXE) $(PDFDETACH_OBJS) \
		$(PDFDETACH_LIBS)

#------------------------------------------------------------------------
pdftoppm-files := $(common-files)
pdftoppm-files += $(common-output-files)
pdftoppm-files += $(common-unicode-files)
pdftoppm-files += pdftoppm

PDFTOPPM_OBJS := $(pdftoppm-files:%=%.o)

PDFTOPPM_LIBS = -L$(GOOLIBDIR) -lGoo $(SPLASHLIBS) $(FTLIBS) \
	$(OTHERLIBS) -lm

pdftoppm$(EXE): $(PDFTOPPM_OBJS) $(GOOLIBDIR)/$(LIBPREFIX)Goo.a
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o pdftoppm$(EXE) $(PDFTOPPM_OBJS) \
		$(PDFTOPPM_LIBS)

#------------------------------------------------------------------------
pdftopng-files := $(common-files)
pdftopng-files += $(common-output-files)
pdftopng-files += $(common-unicode-files)
pdftopng-files += pdftopng

PDFTOPNG_OBJS := $(pdftopng-files:%=%.o)

PDFTOPNG_LIBS = -L$(GOOLIBDIR) -lGoo $(SPLASHLIBS) $(FTLIBS) \
	$(OTHERLIBS) $(PNGLIBS) -lm

pdftopng$(EXE): $(PDFTOPNG_OBJS) $(GOOLIBDIR)/$(LIBPREFIX)Goo.a
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o pdftopng$(EXE) $(PDFTOPNG_OBJS) \
		$(PDFTOPNG_LIBS)

#------------------------------------------------------------------------
pdfimages-files := $(common-files)
pdfimages-files += ImageOutputDev
pdfimages-files += pdfimages

PDFIMAGES_OBJS := $(pdfimages-files:%=%.o)

PDFIMAGES_LIBS = -L$(GOOLIBDIR) -lGoo $(OTHERLIBS) -lm

pdfimages$(EXE): $(PDFIMAGES_OBJS) $(GOOLIBDIR)/$(LIBPREFIX)Goo.a
	$(CXX) $(CXXFLAGS) $(LDFLAGS) -o pdfimages$(EXE) $(PDFIMAGES_OBJS) \
		$(PDFIMAGES_LIBS)

#------------------------------------------------------------------------

clean:
	rm -f $(XPDF_OBJS) xpdf$(EXE)
	rm -f $(PDFTOPS_OBJS) pdftops$(EXE)
	rm -f $(PDFTOTEXT_OBJS) pdftotext$(EXE)
	rm -f $(PDFTOHTML_OBJS) pdftohtml$(EXE)
	rm -f $(PDFINFO_OBJS) pdfinfo$(EXE)
	rm -f $(PDFFONTS_OBJS) pdffonts$(EXE)
	rm -f $(PDFDETACH_OBJS) pdfdetach$(EXE)
	rm -f $(PDFTOPPM_OBJS) pdftoppm$(EXE)
	rm -f $(PDFTOPNG_OBJS) pdftopng$(EXE)
	rm -f $(PDFIMAGES_OBJS) pdfimages$(EXE)

#------------------------------------------------------------------------

depend:
	$(CXX) $(CXXFLAGS) -MM $(CXX_SRC) >Makefile.dep

-include Makefile.dep
